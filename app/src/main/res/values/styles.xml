<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ImmersiveStatusStyle">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">true</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BlackSecondary" parent="Theme.AppCompat.DayNight">
        <item name="android:background">@color/white</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="TitlesEmpty" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontNormal" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12dp</item>
        <item name="fontFamily">@font/font_normal</item>
    </style>
    <style name="FontNormalTitle" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/font_titles</item>
    </style>

    <style name="FontRegular" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14dp</item>
        <item name="fontFamily">@font/font_regular</item>
    </style>

    <style name="FontNormalTitlePrimary" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/font_title_primary</item>
    </style>
    <style name="FontNormalTitleSecondary" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/font_title_primary</item>
    </style>


    <style name="BodysEmpty" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="IconsDark" parent="Theme.AppCompat.DayNight">
        <item name="tint">@color/black</item>
    </style>

    <style name="SwitchCompatTheme" >
        <item name="colorControlActivated">@color/primary</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/com_ycuwq_datepicker_divider</item>
        <item name="colorControlActivated">@color/primary</item>
    </style>

    <style name="customDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>
    <style name="DatePickerBottomDialog" parent="android:Theme.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="DatePickerDialogAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/com_ycuwq_datepicker_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/com_ycuwq_datepicker_dialog_out</item>
    </style>

    <style name="Style_Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SpinKitView">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>


    <style name="Widget.IndicatorFastScroll.FastScroller" parent="android:Widget">
        <item name="iconColor">?android:textColorPrimary</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="textPadding">@dimen/fast_scroller_default_text_padding</item>
    </style>

    <style name="Widget.IndicatorFastScroll.FastScrollerThumb" parent="android:Widget">
        <item name="thumbColor">?colorPrimary</item>
        <item name="iconColor">?android:textColorPrimaryInverse</item>
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

    <style name="SPB" parent="android:Widget.ProgressBar.Horizontal">
    </style>
    <style name="SmoothProgressBar" parent="SPB">
        <item name="spb_color">@color/primary</item>
        <item name="spb_sections_count">@integer/spb_default_sections_count</item>
        <item name="spb_speed">@string/spb_default_speed</item>
        <item name="spb_stroke_width">@dimen/spb_default_stroke_width</item>
        <item name="spb_stroke_separator_length">@dimen/spb_default_stroke_separator_length</item>
        <item name="spb_reversed">@bool/spb_default_reversed</item>
        <item name="spb_mirror_mode">@bool/spb_default_mirror_mode</item>
        <item name="spb_interpolator">@integer/spb_default_interpolator</item>
    </style>
    <style name="GNowProgressBar" parent="SmoothProgressBar">
        <item name="spb_stroke_separator_length">8dp</item>
        <item name="spb_sections_count">2</item>
        <item name="spb_speed">1.7</item>
        <item name="spb_progressiveStart_speed">2</item>
        <item name="spb_progressiveStop_speed">3.4</item>
        <item name="spb_interpolator">spb_interpolator_acceleratedecelerate</item>
        <item name="spb_mirror_mode">true</item>
        <item name="spb_reversed">true</item>
        <item name="spb_colors">@array/gplus_colors</item>
        <item name="spb_progressiveStart_activated">true</item>
        <item name="spb_generate_background_with_colors">false</item>
    </style>



</resources>
