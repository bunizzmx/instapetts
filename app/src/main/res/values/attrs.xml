<resources>

    <dimen name="default_trace_width">16dp</dimen>
    <dimen name="default_progress_text_size">28sp</dimen>
    <dimen name="default_corner_radius">5dp</dimen>
    <dimen name="default_horizontal_text_size">14sp</dimen>
    <dimen name="default_zone_length">22dp</dimen>
    <dimen name="default_zone_width">6dp</dimen>
    <dimen name="default_zone_padding">16dp</dimen>
    <dimen name="default_zone_corner_radius">8dp</dimen>

    <declare-styleable name="ImageViewZoom">
        <attr name="circle" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SubsamplingScaleImageView">
        <attr name="src" format="reference"/>
        <attr name="assetName" format="string"/>
        <attr name="panEnabled" format="boolean"/>
        <attr name="zoomEnabled" format="boolean"/>
        <attr name="quickScaleEnabled" format="boolean"/>
        <attr name="tileBackgroundColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="DotsIndicator">
        <attr name="dotsColor"/>
        <attr name="selectedDotColor"/>
        <attr name="dotsSize"/>
        <attr name="dotsWidthFactor"/>
        <attr name="dotsSpacing"/>
        <attr name="dotsCornerRadius"/>
        <attr name="progressMode"/>
    </declare-styleable>

    <declare-styleable name="HorizontalProgressView">
        <attr name="track_width"/>
        <attr name="start_progress"/>
        <attr name="end_progress"/>
        <attr name="start_color"/>
        <attr name="end_color"/>
        <attr name="isTracked"/>
        <attr name="trackColor"/>
        <attr name="progressDuration"/>
        <attr name="progressTextVisibility"/>
        <attr name="progressTextColor"/>
        <attr name="progressTextSize"/>
        <attr name="animateType"/>
        <attr name="corner_radius" format="dimension"/>
        <attr name="text_padding_bottom" format="dimension"/>
        <attr name="textMovedEnable" format="boolean"/>

    </declare-styleable>

    <!-- SLIDING BOTTOOM_SHEET -->
    <declare-styleable name="SlidingUpPanelLayout">
        <attr name="umanoPanelHeight" format="dimension" />
        <attr name="umanoShadowHeight" format="dimension" />
        <attr name="umanoParallaxOffset" format="dimension" />
        <attr name="umanoFadeColor" format="color" />
        <attr name="umanoFlingVelocity" format="integer" />
        <attr name="umanoDragView" format="reference" />
        <attr name="umanoScrollableView" format="reference" />
        <attr name="umanoOverlay" format="boolean"/>
        <attr name="umanoClipPanel" format="boolean"/>
        <attr name="umanoAnchorPoint" format="float" />
        <attr name="umanoInitialState" format="enum">
            <enum name="expanded" value="0" />
            <enum name="collapsed" value="1" />
            <enum name="anchored" value="2" />
            <enum name="hidden" value="3" />
        </attr>
        <attr name="umanoScrollInterpolator" format="reference" />
    </declare-styleable>

    <declare-styleable name="ImagenCircular">
        <attr format="dimension" name="civ_border_width"/>
        <attr format="color" name="civ_border_color"/>
        <attr format="boolean" name="civ_border_overlay"/>
        <attr format="color" name="civ_fill_color"/>
        <attr format="color" name="civ_circle_background_color"/>
    </declare-styleable>

    <attr name="min_value" format="integer" />
    <attr name="max_value" format="integer" />

    <attr name="long_height_height_ratio" format="fraction" />
    <attr name="short_height_height_ratio" format="fraction" />

    <attr name="ruler_text_color" format="color" />
    <attr name="ruler_text_size" format="dimension" />

    <attr name="indicator_interval" format="dimension" />
    <attr name="indicator_color" format="color" />
    <attr name="indicator_width" format="dimension" />

    <attr name="notch_color" format="color" />

    <declare-styleable name="RulerView">
        <attr name="min_value" />
        <attr name="max_value" />

        <attr name="long_height_height_ratio" />
        <attr name="short_height_height_ratio" />

        <attr name="ruler_text_color" />
        <attr name="ruler_text_size" />

        <attr name="indicator_interval" />
        <attr name="indicator_color" />
        <attr name="indicator_width" />
    </declare-styleable>

    <declare-styleable name="RulerValuePicker">

        <attr name="min_value" />
        <attr name="max_value" />

        <attr name="long_height_height_ratio" />
        <attr name="short_height_height_ratio" />

        <attr name="ruler_text_color" />
        <attr name="ruler_text_size" />

        <attr name="indicator_interval" />
        <attr name="indicator_color" />
        <attr name="indicator_width" />

        <!-- Color of the top notch -->
        <attr name="notch_color" />
    </declare-styleable>

    <attr name="halfVisibleItemCount" format="integer"/>
    <attr name="itemTextSize" format="dimension"/>
    <attr name="itemMaximumWidthText" format="string"/>
    <attr name="itemTextColor" format="color"/>
    <attr name="textGradual" format="boolean"/>
    <attr name="selectedTextColor" format="color"/>
    <attr name="selectedTextSize" format="dimension"/>
    <attr name="currentItemPosition" format="integer"/>
    <attr name="itemWidthSpace" format="dimension"/>
    <attr name="itemHeightSpace" format="dimension"/>
    <attr name="zoomInSelectedItem" format="boolean"/>
    <attr name="wheelCyclic" format="boolean"/>
    <attr name="wheelCurtain" format="boolean"/>
    <attr name="wheelCurtainColor" format="color"/>
    <attr name="wheelCurtainBorder" format="boolean"/>
    <attr name="wheelCurtainBorderColor" format="color"/>
    <attr name="indicatorText" format="string"/>
    <attr name="indicatorTextSize" format="dimension"/>
    <attr name="indicatorTextColor" format="color"/>
    <declare-styleable name="WheelPicker">
        <attr name="halfVisibleItemCount"/>
        <attr name="itemTextSize"/>
        <attr name="itemMaximumWidthText"/>
        <attr name="itemTextColor"/>
        <attr name="textGradual"/>
        <attr name="selectedTextColor"/>
        <attr name="selectedTextSize"/>
        <attr name="currentItemPosition"/>
        <attr name="itemWidthSpace"/>
        <attr name="itemHeightSpace"/>
        <attr name="zoomInSelectedItem"/>
        <attr name="wheelCyclic"/>
        <attr name="wheelCurtain"/>
        <attr name="wheelCurtainColor"/>
        <attr name="wheelCurtainBorder" />
        <attr name="wheelCurtainBorderColor"/>
        <attr name="indicatorText"/>
        <attr name="indicatorTextSize"/>
        <attr name="indicatorTextColor"/>
    </declare-styleable>

    <declare-styleable name="YearPicker">
        <attr name="startYear" format="integer"/>
        <attr name="endYear" format="integer"/>
    </declare-styleable>

    <declare-styleable name="MonthPicker">
    </declare-styleable>

    <declare-styleable name="DatePicker">
        <attr name="halfVisibleItemCount"/>
        <attr name="itemTextSize"/>
        <attr name="itemTextColor"/>
        <attr name="textGradual"/>
        <attr name="selectedTextColor"/>
        <attr name="selectedTextSize"/>
        <attr name="itemWidthSpace"/>
        <attr name="itemHeightSpace"/>
        <attr name="zoomInSelectedItem"/>
        <attr name="wheelCyclic"/>
        <attr name="wheelCurtain"/>
        <attr name="wheelCurtainColor"/>
        <attr name="wheelCurtainBorder"/>
        <attr name="wheelCurtainBorderColor"/>
    </declare-styleable>

    <declare-styleable name="HourAndMinutePicker">
        <attr name="halfVisibleItemCount"/>
        <attr name="itemTextSize"/>
        <attr name="itemTextColor"/>
        <attr name="textGradual"/>
        <attr name="selectedTextColor"/>
        <attr name="selectedTextSize"/>
        <attr name="itemWidthSpace"/>
        <attr name="itemHeightSpace"/>
        <attr name="zoomInSelectedItem"/>
        <attr name="wheelCyclic"/>
        <attr name="wheelCurtain"/>
        <attr name="wheelCurtainColor"/>
        <attr name="wheelCurtainBorder"/>
        <attr name="wheelCurtainBorderColor"/>
    </declare-styleable>

</resources>