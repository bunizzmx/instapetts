<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.bunizz.instapetts.utils.ImagenCircular
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:id="@+id/pick_new_image"
        android:src="@drawable/ic_holder"
        android:layout_width="90dp"
        android:layout_height="90dp"/>
    <LinearLayout
        android:layout_below="@+id/pick_new_image"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/layout_peso"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_hembra"
                android:layout_margin="10dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="40dp"
                app:contentPadding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/icon_hembra"
                    android:src="@drawable/ic_hembra"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/avenir_black"
                android:layout_gravity="center_horizontal"
                android:text="Femenino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_macho"
                android:layout_margin="10dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="40dp"
                app:contentPadding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/icon_macho"
                    android:src="@drawable/ic_macho"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/avenir_black"
                android:layout_gravity="center_horizontal"
                android:text="Masculino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>