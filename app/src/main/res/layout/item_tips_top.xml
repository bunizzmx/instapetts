<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/root_tip_simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        style="@style/FontNormalTitle"
        android:text="@string/tip_import"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            app:contentPaddingTop="2dp"
            app:contentPaddingBottom="2dp"
            android:layout_marginBottom="5dp"
            app:contentPaddingRight="5dp"
            app:contentPaddingLeft="5dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/primary"
            android:id="@+id/tipo_tip_notice"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tip_notice_text"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tipo_tip_notice"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/top_image_tip"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_holder"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/FontNormalTitle"
            android:fontFamily="@font/avenir_b"
            android:id="@+id/title_tip_top"
            android:layout_marginLeft="10dp"
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            style="@style/FontRegular"
            android:layout_marginTop="5dp"
            android:id="@+id/boty_tip_top"
            android:layout_marginLeft="20dp"
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:id="@+id/fecha_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_corazon_black"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>
                    <TextView
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:id="@+id/num_likes"
                        android:layout_marginTop="2dp"
                        android:text="-"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_views"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>
                    <TextView
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:id="@+id/num_views"
                        android:layout_marginTop="2dp"
                        android:text="-"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:background="#E3DFDF"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        style="@style/FontNormalTitle"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="40dp"
        android:text="@string/cosas_interesantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>