<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="70dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_s"
        android:layout_marginLeft="5dp"
        android:elevation="4dp"
       android:layout_marginTop="8dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        android:layout_width="60dp"
        android:layout_height="60dp">
  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/profile_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
      <ImageView
          android:id="@+id/add_story_icon"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
          android:tint="#858585"
          android:src="@drawable/ic_camera"
          android:layout_width="20dp"
          android:layout_height="20dp"/>

  </RelativeLayout>
  </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:elevation="1dp"
        android:layout_below="@+id/card_s"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name_pet_item"
            android:layout_centerHorizontal="true"
            style="@style/FontNormal"
            android:textSize="12dp"
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
  <com.bunizz.instapetts.utils.ImagenCircular
      android:elevation="4dp"
      android:layout_alignParentRight="true"
      app:civ_border_width="2dp"
      app:civ_border_color="@color/white"
      android:src="@drawable/perro_demo"
      android:id="@+id/image_pet_history"
      android:layout_width="30dp"
      android:layout_height="30dp"/>
</RelativeLayout>