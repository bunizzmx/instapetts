<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="70dp"
    android:layout_height="wrap_content">
  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
  <com.bunizz.instapetts.utils.ImagenCircular
      app:civ_border_width="2dp"
      app:civ_border_color="@color/naranja"
      android:src="@drawable/perro_demo"
      android:id="@+id/image_pet_history"
      android:layout_width="60dp"
      android:layout_height="60dp"/>
    <RelativeLayout
        android:id="@+id/icon_add_story_user"
        android:layout_marginTop="-15dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/image_pet_history"
        android:layout_alignParentRight="true"
        android:background="@drawable/circle_instapets"
        android:layout_width="18dp"
        android:layout_height="18dp">
      <ImageView
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
          android:tint="@color/white"
          android:src="@drawable/ic_add_black_24dp"
          android:layout_width="10dp"
          android:layout_height="10dp"/>
    </RelativeLayout>

  </RelativeLayout>
    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/name_pet_item"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/image_pet_history"
        android:textSize="10dp"
        android:textColor="@color/black"
        android:text="El firulais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>