<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
  <com.bunizz.instapetts.utils.ImagenCircular
      android:src="@drawable/perro_demo"
      android:id="@+id/image_pet_history"
      app:civ_border_color="@color/naranja"
      app:civ_border_width="2dp"
      android:layout_width="60dp"
      android:layout_height="60dp"/>
    <TextView
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/image_pet_history"
        android:textSize="10dp"
        android:textColor="@color/black"
        android:text="El firulais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>