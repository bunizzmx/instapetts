<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/background"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:clickable="true">
        <LinearLayout
            android:background="@drawable/round_white"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.bunizz.instapetts.utils.ImagenCircular
                    android:id="@+id/image_pet_dialog"
                    android:src="@drawable/ic_hand_pet_preload"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/name_pet_post_dialog"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="-"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/addres_post_dialog"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="-"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="450dp">
                <FrameLayout
                    android:id="@+id/mediaContainerPreview"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:background="@android:color/black"
                    />
                <ImageView
                    android:id="@+id/ivMediaCoverImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_hand_pet_preload"
                    />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_mute"
                    app:contentPadding="5dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/primary"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:background="#00FFFFFF"
                        android:id="@+id/ivVolumeControl"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:scaleType="centerCrop"
                        android:tint="@color/white"
                        android:src="@drawable/ic_dismute"
                        />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/save_posts"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_favorite"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <ImageView
                    android:id="@+id/icon_like"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_corazon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:textSize="12dp"
                    android:id="@+id/num_likes_posts_dialog"
                    android:textColor="@color/black"
                    android:fontFamily="@font/avenir_b"
                    android:layout_centerVertical="true"
                    android:text="A 123 pets les gusta esto"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/icon_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>



    </RelativeLayout>



</RelativeLayout>