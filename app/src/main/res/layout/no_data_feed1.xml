<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@+id/root_no_data"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_marginBottom="20dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        style="@style/TitlesEmpty"
        android:text="No hay notificaciones"
        android:layout_marginTop="10dp"
        android:id="@+id/title_no_data"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        style="@style/BodysEmpty"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"
        android:text="Sigue explorando instapetts y encuentra nuevas mascotas que llamen tu atencion."
        android:layout_below="@+id/title_no_data"
        android:layout_marginTop="10dp"
        android:id="@+id/body_no_data"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_post_recomended"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/body_no_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>