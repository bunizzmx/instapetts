<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:contentPadding="10dp"
    android:layout_margin="5dp"
    android:id="@+id/root_simple_recomended_user"
    android:layout_height="wrap_content">
   <LinearLayout
       android:orientation="vertical"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
   <com.bunizz.instapetts.utils.ImagenCircular
       android:layout_gravity="center_horizontal"
       android:id="@+id/img_user_recomended"
       android:layout_width="50dp"
       android:layout_height="50dp"/>
   <TextView
       android:layout_gravity="center_horizontal"
       android:layout_marginTop="5dp"
       android:textSize="12dp"
       android:textStyle="bold"
       android:id="@+id/name_user_recomended"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>
   <TextView
       android:textSize="10dp"
       android:layout_marginTop="10dp"
       android:text="calificacion de pets"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

   <TextView
       android:id="@+id/rate_pets_user_recomended"
       android:text="5.0"
       android:layout_marginTop="5dp"
       android:layout_gravity="center_horizontal"
       android:textColor="@color/primary"
       android:textStyle="bold"
       android:textSize="20dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>
</LinearLayout>
</androidx.cardview.widget.CardView>