<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <com.bunizz.instapetts.utils.ImagenCircular
       android:layout_marginLeft="10dp"
       android:src="@drawable/perro_demo"
       android:layout_marginRight="10dp"
       android:id="@+id/image_pet_searching"
       android:layout_width="50dp"
       android:layout_height="50dp"/>
    <TextView
     android:layout_marginTop="10dp"
        android:fontFamily="@font/avenir_black"
        android:textColor="@color/black"
        android:text="Nombre de la mascota"
        android:layout_toRightOf="@+id/image_pet_searching"
        android:id="@+id/name_pet_searching"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Dog . PUG"
        android:textSize="10dp"
        android:layout_toRightOf="@+id/image_pet_searching"
        android:layout_below="@+id/name_pet_searching"
        android:id="@+id/name_propietary_pet_searching"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>