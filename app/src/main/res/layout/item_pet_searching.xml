<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"

    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:id="@+id/search_recent_label"
        android:text="Busquedas recientes"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/root_pet_searching"
        android:layout_below="@+id/search_recent_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.bunizz.instapetts.utils.ImagenCircular
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_holder"
            android:layout_marginRight="10dp"
            android:id="@+id/image_pet_searching"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:fontFamily="@font/avenir_black"
            android:textColor="@color/black"
            android:text="-"
            android:layout_toRightOf="@+id/image_pet_searching"
            android:id="@+id/name_pet_searching"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/name_propietary_pet_searching"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_pet_searching"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/image_pet_searching"
            android:text="-"
            android:textSize="10dp" />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:id="@+id/layout_raza_icon_pet"
            android:orientation="horizontal"
            android:layout_toLeftOf="@+id/icon_flecha_item"
            android:layout_toRightOf="@+id/image_pet_searching"
            android:layout_below="@+id/name_propietary_pet_searching"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/icon_type_pet"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_perro"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="12dp"
                android:id="@+id/name_raza_pet"
                android:layout_marginLeft="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/icon_flecha_item"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:src="@drawable/ic_flechas" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/delete_recent"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_cross"
            android:layout_width="10dp"
            android:layout_height="10dp"/>
    </RelativeLayout>


</RelativeLayout>