<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginBottom="10dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/root_multiple_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/mediaContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            >

        <ImageView
            android:id="@+id/ivMediaCoverImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_hand_pet_preload"
            />

        </FrameLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_mute"
            app:contentPadding="5dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/primary"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:background="#00FFFFFF"
                android:id="@+id/ivVolumeControl"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:scaleType="centerCrop"
                android:tint="@color/white"
                android:src="@drawable/ic_dismute"
                />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
        <com.bunizz.instapetts.utils.double_tap.DoubleTapLikeView
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/layout_double_tap_like"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:icon="@drawable/ic_hand_pet"
            app:doubleTapIn="200" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="70dp"
            android:id="@+id/root_preview_perfil_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/item_pet_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:tint="@color/azul_facebook"
                        android:src="@drawable/ic_hand_pet"
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/name_pet"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/avenir_black"
                        android:text="El firulais"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:textColor="@color/white"
                    android:layout_below="@+id/addres_post"
                    style="@style/FontNormalTitle"
                    android:textSize="14dp"
                    android:id="@+id/description_posts"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="-"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/addres_post"
                    android:layout_marginLeft="10dp"
                    android:textSize="10dp"
                    android:layout_below="@+id/item_pet_info"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/open_options_posts"
            android:layout_width="30dp"
            android:layout_height="40dp">
            <ImageView
                android:rotation="90"
                android:tint="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_dots"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
        </RelativeLayout>

        <com.bunizz.instapetts.utils.ImagenCircular
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:id="@+id/image_pet"
            android:src="@drawable/ic_hand_pet_preload"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <ImageView
            android:layout_marginTop="30dp"
            android:id="@+id/icon_like"
            android:src="@drawable/ic_corazon_w"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:textStyle="bold"
            android:textColor="@color/white"
           style="@style/FontNormal"
            android:id="@+id/num_likes_posts"
            android:layout_centerVertical="true"
            android:text="-"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/icon_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="30dp"
            android:id="@+id/save_posts"
            android:src="@drawable/ic_favorite_w"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/date_post"
            android:text="HACE 20 MIN"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_below="@+id/date_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.bunizz.instapetts.utils.ImagenCircular
                android:id="@+id/mini_user_photo"
                android:src="@drawable/perro_demo"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:tint="@color/azul_facebook"
                android:src="@drawable/ic_usuario"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
            <TextView
                style="@style/FontNormalTitleSecondary"
                android:id="@+id/name_user_posts"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center_vertical"
                android:text="Name User"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>