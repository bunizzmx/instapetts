<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_bottom_nav"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:background="#fff">
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="15"
        tools:ignore="DisableBaselineAlignment">
        <RelativeLayout
            android:id="@+id/tab_feed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="3"
            android:background="?attr/selectableItemBackground">
            <androidx.cardview.widget.CardView
                android:id="@+id/badge_notification"
                app:cardCornerRadius="5dp"
                android:layout_toRightOf="@+id/icon_feed_pet"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="-5dp"
                app:cardBackgroundColor="#FF5722"
                android:layout_width="9dp"
                android:layout_height="9dp"/>
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/icon_feed_pet"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_home_pet"
                tools:ignore="ContentDescription" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tap_tips"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="3"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:rotation="90"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/icon_tips"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_food_pet"
                tools:ignore="ContentDescription" />
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                android:layout_toRightOf="@+id/icon_tips"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="-5dp"
                app:cardBackgroundColor="#FF5722"
                android:layout_width="9dp"
                android:layout_height="9dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:padding="10dp"
            android:id="@+id/tab_add_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            >
            <ImageView
                android:id="@+id/icon_add_image_pet"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_add_image"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_search_pet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="3"
            android:background="?attr/selectableItemBackground"
            >
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/icon_search_pet"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_search"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_profile_pet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="3"
            android:background="?attr/selectableItemBackground"
            >
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/icon_profile_pet"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_hand_pet_white"
                tools:ignore="ContentDescription" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>