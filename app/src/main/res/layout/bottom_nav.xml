<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_bottom_nav"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:layout_alignParentBottom="true"
    style="@style/BlackSecondary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="15"
        tools:ignore="DisableBaselineAlignment">
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:id="@+id/tab_feed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/icon_feed_pet"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_home_pet"
                tools:ignore="ContentDescription" />
           <TextView
               android:visibility="gone"
               android:id="@+id/text_feed_pet"
               android:layout_marginTop="3dp"
               android:textColor="@color/black"
               android:textSize="9dp"
               android:layout_below="@id/icon_feed_pet"
               android:layout_centerHorizontal="true"
               android:text="@string/nav_home"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout

            android:padding="10dp"
            android:id="@+id/tap_tips"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:layout_centerVertical="true"
                android:rotation="90"
                android:layout_centerHorizontal="true"
                android:id="@+id/icon_tips"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_food_pet"
                tools:ignore="ContentDescription" />
            <TextView
                android:visibility="gone"
                android:id="@+id/text_tips"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:textSize="9dp"
                android:layout_below="@id/icon_tips"
                android:layout_centerHorizontal="true"
                android:text="@string/nav_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:padding="5dp"
            android:background="?attr/selectableItemBackground"
            android:id="@+id/tab_add_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            >
                        <ImageView
                            android:layout_centerVertical="true"
                            android:tint="@color/colorPrimaryDark"
                           android:layout_centerHorizontal="true"
                            android:id="@+id/icon_add_image_pet"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_camera"
                            tools:ignore="ContentDescription" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:id="@+id/tab_search_pet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="?attr/selectableItemBackground"
            >
            <ImageView
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/icon_search_pet"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_search"
                tools:ignore="ContentDescription" />
            <TextView
                android:visibility="gone"
                android:id="@+id/text_search_pet"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:textSize="9dp"
                android:layout_below="@id/icon_search_pet"
                android:layout_centerHorizontal="true"
                android:text="@string/nav_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:id="@+id/tab_profile_pet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="?attr/selectableItemBackground"
            >
            <ImageView
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/icon_profile_pet"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_usuario"
                tools:ignore="ContentDescription" />
            <TextView
                android:visibility="gone"
                android:id="@+id/text_profile_pet"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:textSize="9dp"
                android:layout_below="@id/icon_profile_pet"
                android:layout_centerHorizontal="true"
                android:text="@string/nav_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>