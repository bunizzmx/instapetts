<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_bottom_nav"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:layout_alignParentBottom="true"
    style="@style/BlackSecondary">
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/root_progres_publish"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="5dp"
            android:id="@+id/card_smoot"
            android:layout_width="30dp"
            android:layout_height="match_parent">
            <ImageView
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:id="@+id/image_preview_smoot"
                android:src="@drawable/ic_holder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_toRightOf="@+id/card_smoot"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_smoot"
                android:textSize="10dp"
                android:text="En progreso..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.bunizz.instapetts.utils.smoot.SmoothProgressBar
                android:id="@+id/smoot_progress"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                style="@style/GNowProgressBar"
                android:indeterminate="true"/>
        </LinearLayout>
          <RelativeLayout
              android:visibility="gone"
              android:id="@+id/close_smoot"
              android:layout_alignParentRight="true"
              android:layout_width="50dp"
              android:layout_height="match_parent">
              <ImageView
                  android:layout_centerVertical="true"
                  android:layout_centerHorizontal="true"
                  android:src="@drawable/ic_cross"
                  android:layout_width="10dp"
                  android:layout_height="10dp"/>
          </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/root_progres_publish"
        android:id="@+id/root_tabs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="15"
        tools:ignore="DisableBaselineAlignment">
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:id="@+id/tab_feed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/icon_feed_pet"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_home_pet"
                tools:ignore="ContentDescription" />
           <TextView
               android:visibility="gone"
               android:id="@+id/text_feed_pet"
               android:layout_marginTop="3dp"
               android:textColor="@color/black"
               android:textSize="9dp"
               android:layout_below="@id/icon_feed_pet"
               android:layout_centerHorizontal="true"
               android:text="@string/nav_home"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout

            android:padding="10dp"
            android:id="@+id/tap_tips"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:layout_centerVertical="true"
                android:rotation="90"
                android:layout_centerHorizontal="true"
                android:id="@+id/icon_tips"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_food_pet"
                tools:ignore="ContentDescription" />
            <TextView
                android:visibility="gone"
                android:id="@+id/text_tips"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:textSize="9dp"
                android:layout_below="@id/icon_tips"
                android:layout_centerHorizontal="true"
                android:text="@string/nav_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:padding="5dp"
            android:background="?attr/selectableItemBackground"
            android:id="@+id/tab_add_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            >
                        <ImageView
                            android:layout_centerVertical="true"
                           android:layout_centerHorizontal="true"
                            android:id="@+id/icon_add_image_pet"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_camera"
                            tools:ignore="ContentDescription" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:id="@+id/tab_search_pet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="?attr/selectableItemBackground"
            >
            <ImageView
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/icon_search_pet"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_search"
                tools:ignore="ContentDescription" />
            <TextView
                android:visibility="gone"
                android:id="@+id/text_search_pet"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:textSize="9dp"
                android:layout_below="@id/icon_search_pet"
                android:layout_centerHorizontal="true"
                android:text="@string/nav_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:id="@+id/tab_profile_pet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="?attr/selectableItemBackground"
            >
            <com.bunizz.instapetts.utils.ImagenCircular
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/icon_profile_pet"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_usuario"
                tools:ignore="ContentDescription" />
            <TextView
                android:visibility="gone"
                android:id="@+id/text_profile_pet"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:textSize="9dp"
                android:layout_below="@id/icon_profile_pet"
                android:layout_centerHorizontal="true"
                android:text="@string/nav_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>