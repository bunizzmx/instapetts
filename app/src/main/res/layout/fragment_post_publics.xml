<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/root_search_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:background="?attr/selectableItemBackground"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/search_by_qr"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_collar"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/search_by_qr"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/card_search_raza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/root_search_pets_users"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:text="@string/search"
                    android:layout_toRightOf="@+id/icon_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/icon_search"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_search"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
            </RelativeLayout>
        </RelativeLayout>
        <com.bunizz.instapetts.utils.tabs2.SmartTabLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/card_search_raza"
            android:id="@+id/tabs_profile_propietary"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clipToPadding="false"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_marginBottom="10dp"
            app:stl_defaultTabTextColor="@color/black"
            app:stl_defaultTabTextHorizontalPadding="18dp"
            app:stl_dividerColor="#00FFFFFF"
            app:stl_dividerThickness="0dp"
            app:stl_indicatorColor="#ECEBEB"
            app:stl_indicatorCornerRadius="18dp"
            app:stl_indicatorGravity="center"
            app:stl_indicatorInterpolation="smart"
            app:stl_indicatorThickness="36dp"
            app:stl_underlineColor="@color/colorPrimaryDark"
            app:stl_underlineThickness="0dp"
            />
    </RelativeLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_below="@+id/root_search_toolbar"
        android:id="@+id/refresh_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager_search"

        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</RelativeLayout>