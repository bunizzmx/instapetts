<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:tint="#00BCD4"
        android:src="@drawable/ic_hand_7"
        android:layout_width="140dp"
        android:layout_height="140dp"/>
    <ImageView
        android:layout_marginRight="-40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:tint="#61E91E63"
        android:src="@drawable/ic_hand_1"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:tint="#F44336"
        android:src="@drawable/ic_hand_5"
        android:layout_width="150dp"
        android:layout_height="150dp"/>
    <RelativeLayout
        android:background="#E9FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/back_to_main"
        android:layout_margin="10dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="20dp"
        app:contentPadding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:tint="@color/amarillo"
            android:src="@drawable/ic_arrow_back"
            android:layout_width="15dp"
            android:layout_height="15dp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_below="@+id/back_to_main"
        android:fontFamily="@font/avenir_b"
        android:textSize="26dp"
        android:layout_margin="20dp"
        android:textColor="@color/black"
        android:id="@+id/title_login"
        android:text="Registra tu cuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="30dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <EditText
          android:inputType="textEmailAddress"
          android:fontFamily="@font/avenir_b"
          android:hint="Correo"
          android:padding="20dp"
          android:background="@drawable/eddittext_background"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

        <EditText
            android:inputType="textPassword"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/avenir_b"
            android:hint="Contraseña"
            android:padding="20dp"
            android:background="@drawable/eddittext_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:inputType="textPassword"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/avenir_b"
            android:hint="Confirmar contraseña"
            android:padding="20dp"
            android:background="@drawable/eddittext_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/button_signin"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:background="@color/amarillo"
            android:fontFamily="@font/avenir_black"
            android:textAllCaps="false"
            android:text="Sigin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</RelativeLayout>