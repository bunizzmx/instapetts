<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <RelativeLayout
        android:layout_alignParentLeft="true"
        android:background="#EAEAEA"
        android:layout_width="1dp"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_marginLeft="3dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:orientation="vertical"

        style="@style/ImmersiveStatusStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginLeft="20dp"
            style="@style/FontNormalTitlePrimary"
            android:id="@+id/app_name_user"
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:background="#E1DFDF"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:paddingLeft="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            android:fontFamily="@font/font_titles"
            android:text="CUENTA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/menu_side_guardado"
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="10dp"
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_favorite"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                style="@style/FontNormal"
                android:layout_marginLeft="20dp"
                android:text="Guardado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/side_menu_share_profile"
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="10dp"
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_compartir"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                style="@style/FontNormal"
                android:layout_marginLeft="20dp"
                android:text="Compartir tu Perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="10dp"
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_scanner"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                style="@style/FontNormal"
                android:layout_marginLeft="20dp"
                android:text="Tu identificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/side_menu_administrate_account"
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="10dp"
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_usuario"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                style="@style/FontNormal"
                android:layout_marginLeft="20dp"
                android:text="Administrar tu cuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:fontFamily="@font/font_titles"
            android:text="GENERAL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/side_menu_open_push"
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="10dp"
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_notification"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                style="@style/FontNormal"
                android:layout_marginLeft="20dp"
                android:text="Notificaciones push"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/menu_centro_ayuda"
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="10dp"
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_pregunta"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                style="@style/FontNormal"
                android:layout_marginLeft="20dp"
                android:text="Centro de Hayuda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="10dp"
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_politica"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                style="@style/FontNormal"
                android:layout_marginLeft="20dp"
                android:text="Terminos de uso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="10dp"
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_pregunta"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                style="@style/FontNormal"
                android:layout_marginLeft="20dp"
                android:text="Politica privacidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="10dp"
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_terminos"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                style="@style/FontNormal"
                android:layout_marginLeft="20dp"
                android:text="Terminos de uso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:background="#E1DFDF"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/logout"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:background="?attr/selectableItemBackground"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_cerrar_sesion"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                style="@style/FontNormal"
                android:layout_marginLeft="20dp"
                android:text="Cerrar Session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        </LinearLayout>
        <TextView
            style="@style/FontNormal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/version_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>