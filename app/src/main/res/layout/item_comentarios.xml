<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <com.bunizz.instapetts.utils.ImagenCircular
       android:id="@+id/imagen_user_comment"
       android:src="@drawable/ic_holder"
       android:layout_width="25dp"
       android:layout_height="25dp"/>
    <LinearLayout
        android:layout_toLeftOf="@+id/layout_functions"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imagen_user_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12dp"
                android:id="@+id/item_comentarios_name"
                android:text=""
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/primary"
                android:textSize="12dp"
                android:id="@+id/item_comentarios_autor"
                android:text="  -  Autor"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:textSize="12dp"
            android:id="@+id/item_comentarios_comentario"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fecha_comment"
                android:layout_marginTop="5dp"
                android:text=""
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/n_likes_comment"
                android:textSize="12sp"
                android:text=""
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_functions"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/like_comment"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/icon_like_comment"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_like_comment_off"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="?attr/selectableItemBackground"
            android:id="@+id/delete_comment"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_trash"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>