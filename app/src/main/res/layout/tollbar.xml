<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/root_toolbar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    style="@style/AppTheme"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:background="?attr/selectableItemBackground"
        android:id="@+id/new_story"
        android:layout_width="50dp"
        android:layout_height="match_parent">
        <ImageView
            android:tint="@color/black"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_upload_story"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </RelativeLayout>
    <com.bunizz.instapetts.utils.AnimatedTextViews.TyperTextView
        style="@style/titleapp"
        android:id="@+id/animated_title"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:charIncrease="3"
        app:typerSpeed="80"/>
   <TextView
       android:visibility="gone"
       android:id="@+id/label_toolbar"
       style="@style/titleapp"
       android:textSize="18dp"
       android:layout_centerVertical="true"
       android:layout_centerHorizontal="true"
       android:text="@string/app_name"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>
    <RelativeLayout
        android:background="?attr/selectableItemBackground"
        android:id="@+id/open_notifications"
        android:layout_centerVertical="true"
        android:elevation="5dp"
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_height="match_parent">
        <ImageView
            style="@style/IconsDark"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_notification"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:id="@+id/badge_notification"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="13dp"
            android:layout_alignParentRight="true"
            app:cardBackgroundColor="@color/orange"
            android:layout_width="9dp"
            android:layout_height="9dp"/>
    </RelativeLayout>

</RelativeLayout>