<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.bunizz.instapetts.utils.crop2.view.ImageCropView
        xmlns:imagecrop="http://schemas.android.com/apk/res-auto"
        android:id="@+id/crop_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        imagecrop:gridInnerColor="#66ffffff"
        imagecrop:gridInnerStroke="1dp"
        imagecrop:gridOuterColor="#ffffff"
        imagecrop:gridOuterStroke="1dp"
        imagecrop:outsideLayerColor="#99000000"
        imagecrop:setInnerGridMode="on"
        imagecrop:setOuterGridMode="on" />
    <RelativeLayout
        android:id="@+id/close_camera"
        android:layout_margin="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:tint="@color/white"
            android:src="@drawable/ic_cross"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/black"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="?attr/selectableItemBackground"
                android:padding="15dp"
                android:id="@+id/crop_9_16"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/avenir_b"
                    android:text="9:16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:background="?attr/selectableItemBackground"
                android:padding="15dp"
                android:id="@+id/crop_cuadrada"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/avenir_b"
                    android:text="1:1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:background="?attr/selectableItemBackground"
                android:padding="15dp"
                android:id="@+id/crop_3_4"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/avenir_b"
                    android:text="3:4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/publish_stories"
        android:layout_margin="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        app:cardElevation="3dp"
        app:contentPadding="15dp"
        app:cardCornerRadius="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:fontFamily="@font/avenir_b"
                android:layout_marginRight="10dp"
                android:text="@string/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:rotation="180"
                android:src="@drawable/ic_arrow_back"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>