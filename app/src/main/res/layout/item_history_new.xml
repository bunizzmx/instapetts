<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
  <RelativeLayout
      android:layout_width="60dp"
      android:layout_height="80dp">
    <androidx.cardview.widget.CardView
        app:cardElevation="1dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="4dp"
        app:cardCornerRadius="10dp"
        android:layout_width="60dp"
        android:layout_height="70dp">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
        <com.bunizz.instapetts.utils.ImagenCircular
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_add_new"
            android:id="@+id/image_pet_history_add"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/image_pet_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
      </RelativeLayout>

    </androidx.cardview.widget.CardView>
      <ImageView
          android:id="@+id/type_pet_icon"
          android:elevation="3dp"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:src="@drawable/ic_gato"
          android:layout_width="20dp"
          android:layout_height="20dp"/>

  </RelativeLayout>
    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/name_pet_item"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/image_pet_history"
        android:textSize="10dp"
        android:textColor="@color/black"
        android:text="@string/label_pet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>