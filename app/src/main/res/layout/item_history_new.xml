<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
  <com.bunizz.instapetts.utils.ImagenCircular
      android:src="@drawable/perro_demo"
      android:id="@+id/image_pet_history"
      android:layout_width="60dp"
      android:layout_height="60dp"/>
  <com.bunizz.instapetts.utils.ImagenCircular
      android:layout_marginBottom="5dp"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:visibility="gone"
      android:src="@drawable/ic_add_new"
      android:id="@+id/image_pet_history_add"
      android:layout_width="40dp"
      android:layout_height="40dp"/>
  </RelativeLayout>
    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/name_pet_item"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/image_pet_history"
        android:textSize="10dp"
        android:textColor="@color/black"
        android:text="El firulais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>