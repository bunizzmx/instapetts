<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/root_simple_recomended_user"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        style="@style/AppTheme"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        android:id="@+id/card_recomended"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/image_post_recomended"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>
    </androidx.cardview.widget.CardView>
   <RelativeLayout
       android:padding="10dp"
       android:layout_below="@+id/card_recomended"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <com.bunizz.instapetts.utils.ImagenCircular
           android:id="@+id/image_user_recomended"
           android:src="@drawable/perro_demo"
           android:layout_width="30dp"
           android:layout_height="30dp"/>
       <TextView
           style="@style/FontNormal"
           android:id="@+id/name_user_recomended"
           android:layout_marginLeft="10dp"
           android:layout_centerVertical="true"
           android:layout_toRightOf="@+id/image_user_recomended"
           android:text="Name de user"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
   </RelativeLayout>
</RelativeLayout>