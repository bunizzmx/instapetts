<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/root_simple_recomended_user"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        style="@style/AppTheme"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        android:id="@+id/card_recomended"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/image_post_recomended"
                android:layout_width="match_parent"
                android:layout_height="180dp"/>
            <ImageView
                android:id="@+id/multiple_images_posts"
                android:tint="@color/white"
                android:src="@drawable/ic_album"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:layout_width="10dp"
                android:layout_height="10dp"/>

            <ImageView
                android:id="@+id/icon_type_mascota"
                android:layout_margin="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_perro"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
   <LinearLayout
       android:orientation="vertical"
       android:padding="10dp"
       android:layout_below="@+id/card_recomended"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <com.bunizz.instapetts.utils.ImagenCircular
               android:id="@+id/image_user_recomended"
               android:src="@drawable/ic_holder"
               android:layout_width="25dp"
               android:layout_height="25dp"/>
           <TextView
               android:textStyle="bold"
               android:id="@+id/name_user_recomended"
               android:layout_marginLeft="10dp"
               android:layout_centerVertical="true"
               android:layout_toRightOf="@+id/image_user_recomended"
               android:text=""
               android:textSize="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </RelativeLayout>
       <TextView
           android:textColor="@color/black"
           android:id="@+id/date_user_recomended"
           android:layout_marginLeft="2dp"
           android:layout_marginTop="5dp"
           android:layout_centerVertical="true"
           android:text=""
           android:textSize="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>

   </LinearLayout>
</RelativeLayout>