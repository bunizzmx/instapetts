<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/root_preview_perfil_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <com.bunizz.instapetts.utils.ImagenCircular
            android:layout_margin="10dp"
            android:id="@+id/image_pet"
            android:src="@drawable/ic_holder"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/image_pet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/item_pet_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:tint="@color/azul_facebook"
                        android:src="@drawable/ic_hand_pet"
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/name_pet"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/avenir_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/addres_post"
                    android:layout_marginLeft="10dp"
                    android:textSize="10dp"
                    android:layout_below="@+id/item_pet_info"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </RelativeLayout>
           <RelativeLayout
               android:id="@+id/open_options_posts"
               android:layout_marginRight="10dp"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:layout_width="30dp"
               android:layout_height="40dp">
               <ImageView
                   android:tint="@color/primary"
                   android:layout_centerVertical="true"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="5dp"
                   android:src="@drawable/ic_alerta"
                   android:layout_width="15dp"
                   android:layout_height="15dp"/>
           </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:minHeight="300dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:visibility="gone"
        android:scaleType="centerCrop"
        android:id="@+id/single_image"
        android:layout_width="match_parent"
        android:layout_height="450dp"/>

    <RelativeLayout
        android:id="@+id/root_multiple_image"
        android:layout_width="match_parent"
        android:layout_height="450dp">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/list_fotos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.bunizz.instapetts.utils.Dots.DotsIndicator
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/dots_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="15dp"
            app:dotsColor="#fff"
            app:dotsCornerRadius="8dp"
            app:dotsSize="7dp"
            app:dotsSpacing="4dp"
            app:dotsWidthFactor="2"
            app:progressMode="false"
            app:selectedDotColor="@color/primary"
            />


          <androidx.cardview.widget.CardView
              android:id="@+id/card_number_indicator"
              app:cardElevation="1dp"
             app:contentPaddingLeft="4dp"
             app:contentPaddingRight="4dp"
              app:contentPaddingTop="2dp"
              app:contentPaddingBottom="2dp"
               android:layout_alignParentRight="true"
              android:layout_marginTop="10dp"
              android:layout_marginRight="20dp"
              app:cardBackgroundColor="@color/primary"
              app:cardCornerRadius="8dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
             <TextView
                 android:id="@+id/label_number_indicator"
                 android:textStyle="bold"
                 android:textSize="12dp"
                 android:textColor="@color/white"
                 android:text="1/1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
          </androidx.cardview.widget.CardView>
    </RelativeLayout>
        <com.bunizz.instapetts.utils.double_tap.DoubleTapLikeView
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/layout_double_tap_like"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:icon="@drawable/ic_hand_pet"
            app:doubleTapIn="200" />
        <com.bunizz.instapetts.utils.loadings.SpinKitView
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/progres_image"
            style="@style/SpinKitView"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <RelativeLayout
            android:paddingBottom="20dp"
            android:paddingEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:contentPadding="8dp"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/l_icon_like"
                android:id="@+id/l_icon_commentar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/icon_commentar"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_commentar" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="15dp"
                android:id="@+id/l_icon_like"
                app:contentPadding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/icon_like"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_corazon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <androidx.cardview.widget.CardView
            app:cardElevation="1dp"
            app:contentPaddingLeft="4dp"
            app:contentPaddingRight="4dp"
            app:contentPaddingTop="2dp"
            app:contentPaddingBottom="2dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:text="HAYUDA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <TextView
        android:textStyle="bold"
        android:id="@+id/num_likes_posts"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:textSize="12dp" />
    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:rotation="180"
            android:src="@drawable/ic_quotes"
            android:layout_width="10dp"
            android:layout_height="10dp"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:textSize="14dp"
            android:id="@+id/description_posts"
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_quotes"
            android:layout_width="10dp"
            android:layout_height="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/num_comments_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#9C9C9C"
            android:id="@+id/num_coments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <RelativeLayout
        android:paddingBottom="10dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/date_post"
            android:text="-"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/date_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.bunizz.instapetts.utils.ImagenCircular
                android:id="@+id/mini_user_photo"
                android:src="@drawable/ic_holder"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:tint="@color/azul_facebook"
                android:src="@drawable/ic_usuario"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
            <TextView
                style="@style/FontNormal"
                android:id="@+id/name_user_posts"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center_vertical"
                android:text="-"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>