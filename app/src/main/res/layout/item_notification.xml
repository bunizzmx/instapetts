<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/root_notification"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="?attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.bunizz.instapetts.utils.ImagenCircular
        android:id="@+id/ic_notification"
        android:src="@drawable/ic_holder"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <LinearLayout
        android:id="@+id/body_title_notification"
        android:layout_toLeftOf="@+id/functions_item"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ic_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="gone"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="12dp"
            android:id="@+id/title_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/black"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:id="@+id/body_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:layout_toRightOf="@+id/ic_notification"
        android:layout_marginTop="5dp"
        android:textSize="10dp"
        android:textStyle="bold"
        android:text="-"
        android:textColor="@color/black"
        android:id="@+id/fecha_notificacion"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/body_title_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_alignParentRight="true"
        android:id="@+id/functions_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_xx"
            app:cardCornerRadius="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/image_extra"
                android:layout_width="40dp"
                android:layout_height="50dp"/>
        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:id="@+id/delete_notification"
            android:layout_width="50dp"
            android:layout_height="30dp">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_cross"
                android:layout_width="10dp"
                android:layout_height="10dp"/>
        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>