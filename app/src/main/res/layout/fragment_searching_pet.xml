<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/root_searching"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <RelativeLayout
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <EditText
                        android:id="@+id/search_input"
                        android:paddingLeft="20dp"
                        android:textSize="16dp"
                        android:hint="@string/search"
                        android:background="#02FFFFFF"
                        android:layout_toRightOf="@+id/icon_search"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:id="@+id/icon_search"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_back"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>
                </RelativeLayout>
        </RelativeLayout>
        <com.bunizz.instapetts.utils.tabs2.SmartTabLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/kjk"
            android:id="@+id/tabs_search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clipToPadding="false"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_marginBottom="10dp"
            app:stl_defaultTabTextColor="@color/black"
            app:stl_defaultTabTextHorizontalPadding="18dp"
            app:stl_dividerColor="#00FFFFFF"
            app:stl_dividerThickness="0dp"
            app:stl_indicatorColor="#ECEBEB"
            app:stl_indicatorCornerRadius="18dp"
            app:stl_indicatorGravity="center"
            app:stl_indicatorInterpolation="smart"
            app:stl_indicatorThickness="36dp"
            app:stl_underlineColor="@color/colorPrimaryDark"
            app:stl_underlineThickness="0dp"
            />
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:background="#CAC8C8"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"/>
    </LinearLayout>
    <androidx.viewpager.widget.ViewPager
        android:layout_below="@+id/root_searching"
        android:id="@+id/viewpager_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.cardview.widget.CardView
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/primary"
        app:contentPadding="5dp"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:visibility="gone"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:fontFamily="@font/avenir_black"
                android:text="filtrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:tint="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_ajustar"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>