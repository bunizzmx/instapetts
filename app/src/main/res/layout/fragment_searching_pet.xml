<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/root_searching"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:id="@+id/search_by_qr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_qr"
                    android:layout_width="20dp"
                    android:layout_height="20dp"></ImageView>
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_toLeftOf="@+id/search_by_qr"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                app:contentPadding="3dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:id="@+id/card_search_raza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <EditText
                        android:paddingLeft="10dp"
                        android:textSize="12dp"
                        android:hint="busca raza de mascota"
                        android:background="#02FFFFFF"
                        android:layout_toRightOf="@+id/icon_search"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:id="@+id/icon_search"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_search"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <com.bunizz.instapetts.utils.tabs.SlidingTabLayout
            android:layout_below="@+id/search_by_qr"
            android:id="@+id/tabs_search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"/>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:background="#CAC8C8"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"/>
    </LinearLayout>
<androidx.recyclerview.widget.RecyclerView
    android:visibility="gone"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
    tools:listitem="@layout/item_pet_searching"
    android:layout_below="@+id/root_searching"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/searching_results_list_pets"/>
    <androidx.viewpager.widget.ViewPager
        android:layout_below="@+id/root_searching"
        android:id="@+id/viewpager_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.cardview.widget.CardView
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/naranja"
        app:contentPadding="5dp"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:fontFamily="@font/avenir_black"
                android:text="filtrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:tint="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_ajustar"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>