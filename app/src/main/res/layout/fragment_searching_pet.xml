<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/root_searching"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <RelativeLayout
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <EditText
                        android:focusable="true"
                        android:focusedByDefault="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/searching_world"
                        android:id="@+id/search_input"
                        android:paddingLeft="20dp"
                        android:textSize="16dp"
                        android:hint="@string/search"
                        android:background="#02FFFFFF"
                        android:layout_toRightOf="@+id/icon_search"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:id="@+id/icon_search"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_back"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>
                    <ProgressBar
                        android:visibility="gone"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/searching_world"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                </RelativeLayout>
        </RelativeLayout>
        <com.bunizz.instapetts.utils.tabs2.SmartTabLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/kjk"
            android:id="@+id/tabs_search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clipToPadding="false"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_marginBottom="10dp"
            app:stl_defaultTabTextColor="@color/black"
            app:stl_defaultTabTextHorizontalPadding="18dp"
            app:stl_dividerColor="#00FFFFFF"
            app:stl_dividerThickness="0dp"
            app:stl_indicatorColor="#ECEBEB"
            app:stl_indicatorCornerRadius="18dp"
            app:stl_indicatorGravity="center"
            app:stl_indicatorInterpolation="smart"
            app:stl_indicatorThickness="36dp"
            app:stl_underlineColor="@color/colorPrimaryDark"
            app:stl_underlineThickness="0dp"
            />
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:background="#CAC8C8"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"/>
    </LinearLayout>
    <androidx.viewpager.widget.ViewPager
        android:layout_below="@+id/root_searching"
        android:id="@+id/viewpager_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>