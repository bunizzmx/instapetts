<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="10dp"
    android:orientation="vertical"
    android:layout_marginRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:id="@+id/root_tip_simple">
  <ImageView
      android:scaleType="centerCrop"
      android:src="@drawable/perro_demo"
      android:id="@+id/image_tip_simple"
      android:layout_width="120dp"
      android:layout_height="match_parent"/>
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/image_tip_simple"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="16dp"
            android:fontFamily="@font/avenir_black"
            android:textColor="@color/black"
            android:text="5 tips para que tu perro no se haga del baño en casa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:text="10 Tipo para que tu perro se deje de hacer de baño el hijo de su pinche madre si no lo corres a la verga a la calle por puerco...."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>