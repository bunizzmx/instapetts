<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/layout_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout"
        android:background="@android:color/black"
        android:gravity="center"
        >
        <com.bunizz.instapetts.utils.trimVideo.widget.ZVideoView
            android:id="@+id/video_loader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/icon_video_play"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:padding="12dp"
            android:src="@drawable/ic_play"
            />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        android:layout_above="@+id/layout"
        android:padding="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="9dp"
        android:layout_width="50dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_horizontal|center_vertical"
            android:textSize="8dp"
            android:id="@+id/text_duration_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="1" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_alignParentRight="true"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/layout"
        android:padding="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="9dp"
        android:layout_width="50dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_horizontal|center_vertical"
            android:textSize="8dp"
            android:id="@+id/text_duration_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="1" />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black"
        >
        <RelativeLayout
            android:id="@+id/video_frames_layout"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:layout_centerVertical="true"
                android:layout_marginBottom="20dp"
                android:id="@+id/video_frames_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                tools:background="@android:color/holo_green_light"
                />

            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_marginBottom="20dp"
                android:id="@+id/positionIcon"
                android:layout_width="4dp"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="35dp"
                android:contentDescription="@null"
                android:background="@drawable/button_follow"
                />
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                >
                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:background="@color/shadow_color"
                    />
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:id="@+id/seekBarLayout"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    />
                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:background="@color/shadow_color"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:layout_marginRight="10dp"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:background="@drawable/button_follow"
        android:id="@+id/finishBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="Terminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>