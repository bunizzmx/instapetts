<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_marginRight="5dp"
        android:elevation="3dp"
        android:layout_marginTop="-1dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_firts"
        android:id="@+id/medall_ranking"
        android:layout_width="25dp"
        android:layout_height="25dp"/>

    <androidx.cardview.widget.CardView
        android:layout_centerVertical="true"
        android:id="@+id/card_number_ranking"
       android:layout_marginLeft="5dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/primary"
        app:contentPaddingRight="10dp"
        app:contentPaddingLeft="10dp"
        app:contentPaddingTop="5dp"
        app:contentPaddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/num_ranking"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
  <androidx.cardview.widget.CardView
      android:layout_toRightOf="@+id/card_number_ranking"
      app:cardCornerRadius="10dp"
     android:layout_marginTop="8dp"
      android:layout_marginRight="5dp"
      android:layout_marginLeft="5dp"
      android:layout_marginBottom="5dp"
      app:contentPadding="5dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <com.bunizz.instapetts.utils.ImagenCircular
              app:civ_border_color="@color/primary"
              app:civ_border_width="2dp"
              android:id="@+id/image_pet_ranking"
              android:layout_margin="5dp"
              android:layout_alignParentStart="true"
              android:layout_width="50dp"
              android:layout_height="50dp"/>
          <LinearLayout
              android:layout_margin="5dp"
              android:orientation="vertical"
              android:layout_toRightOf="@+id/image_pet_ranking"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:id="@+id/name_pet_ranking"
                  android:textColor="@color/shadow_color"
                  android:textStyle="bold"
                  android:text="EL FIRULAIS"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
              <TextView
                  android:text="me gustan las croquetas"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
              <TextView
                  android:id="@+id/name_propietary_pet"
                  android:text="-"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
          </LinearLayout>
          <LinearLayout
              android:orientation="vertical"
              android:layout_below="@+id/image_pet_ranking"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <LinearLayout
                  android:layout_marginRight="10dp"
                  android:layout_gravity="right"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
                  <ImageView
                      android:layout_gravity="center_vertical"
                      android:src="@drawable/ic_corazon_black"
                      android:layout_width="15dp"
                      android:layout_height="15dp"/>
                  <TextView
                      android:textColor="@color/shadow_color"
                      android:id="@+id/likes_ranking"
                      android:layout_marginLeft="5dp"
                      android:layout_gravity="center_vertical"
                      android:textStyle="bold"
                      android:textSize="20sp"
                      android:text="140"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
              </LinearLayout>

          </LinearLayout>
      </RelativeLayout>

  </androidx.cardview.widget.CardView>
</RelativeLayout>