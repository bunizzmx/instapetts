<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="bottom">
    <com.google.android.material.appbar.AppBarLayout
        android:background="@color/white"
        android:paddingBottom="3dp"
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0.1dp"
        android:fitsSystemWindows="true"
        >
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            >
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:minHeight="?attr/actionBarSize"
                android:gravity="top"
                app:layout_collapseMode="pin" />
            <RelativeLayout
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/back_to_main"
                    android:layout_margin="10dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="15dp"
                    app:contentPadding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:tint="@color/primary"
                        android:src="@drawable/ic_arrow_back"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>

                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:text="-"
                    android:id="@+id/title_name_preview"
                    android:textColor="@color/black"
                    android:fontFamily="@font/avenir_b"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/back_to_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:id="@+id/kjk"
                    android:layout_below="@+id/back_to_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include layout="@layout/include_info_profile"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_below="@+id/kjk"
                    android:background="#CAC8C8"
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"/>
                <LinearLayout
                    android:id="@+id/layout_tt"
                    android:layout_below="@+id/kjk"
                    android:layout_width="match_parent"
                    android:weightSum="3"
                    android:layout_height="50dp">
                    <RelativeLayout
                        android:layout_gravity="center_vertical"
                        android:padding="10dp"
                        android:id="@+id/filter_all"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground">
                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/icon_filter_all"
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:src="@drawable/ic_grid"
                            tools:ignore="ContentDescription" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_gravity="center_vertical"
                        android:padding="10dp"
                        android:id="@+id/filter_videos"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground">
                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/icon_filter_videos"
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:src="@drawable/ic_paisaje"
                            tools:ignore="ContentDescription" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_gravity="center_vertical"
                        android:padding="10dp"
                        android:id="@+id/filter_images"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground">
                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/icon_filter_images"
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:src="@drawable/ic_tv"
                            tools:ignore="ContentDescription" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="-1dp"
                    android:layout_below="@+id/layout_tt"
                    android:background="#CAC8C8"
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"/>

            </RelativeLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager_profile"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/loanding_preview_root"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.bunizz.instapetts.utils.loadings.SpinKitView
            style="@style/SpinKitView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/spinky_loading_profile_info"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>