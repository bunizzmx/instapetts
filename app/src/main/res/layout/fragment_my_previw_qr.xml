<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_qr"
        app:cardElevation="2dp"
        app:cardCornerRadius="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginBottom="30dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/qr_target"
                android:layout_width="250dp"
                android:layout_height="250dp"/>
        </RelativeLayout>

            <TextView
                android:textSize="10dp"
                android:layout_gravity="center_horizontal"
                android:text="EScanea el PetCode para seguirme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/icon_peet"
                android:layout_marginBottom="20dp"
                android:tint="@color/black"
                android:src="@drawable/ic_hand_pet"
                android:layout_gravity="center_horizontal"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/card_qr"

        android:textSize="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Usa la version mas reciente de la aplicacion para escanear el codigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/openscan"
        android:padding="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:fontFamily="@font/avenir_b"
            android:textSize="18dp"
            android:text="Escanear QR de mascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/close_dialog"
        android:tint="@color/white"
        android:src="@drawable/ic_cross"
        android:layout_width="15dp"
        android:layout_height="15dp"/>
</RelativeLayout>