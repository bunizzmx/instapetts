<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/title_login"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="login top\nyour account"
        android:textSize="30dp"
        android:layout_above="@+id/layout_inputs"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/layout_inputs"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:fontFamily="@font/avenir_regular"
            android:id="@+id/user_login"
            android:padding="12dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="@color/white"
            android:hint="user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:fontFamily="@font/avenir_regular"
            android:padding="12dp"
            android:textColorHint="@color/white"
            android:hint="password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:fontFamily="@font/avenir_regular"
            android:layout_margin="10dp"
            android:layout_gravity="end"
            android:textColor="@color/white"
            android:text="perdiste tu contraseÃ±a?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:fontFamily="@font/avenir_black"
            android:layout_marginTop="20dp"
           android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textAllCaps="false"
            android:text="login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/register_user"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/avenir_regular"
                android:textColor="#8B8585"
                android:text="no tienes una cuenta?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="@font/avenir_black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:text="Registrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>



    <TextView
        android:fontFamily="@font/avenir_regular"
        android:id="@+id/xxx"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/logins_socials"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:textColor="#8B8585"
        android:text="o registrate con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
<LinearLayout
    android:id="@+id/logins_socials"
   android:layout_marginBottom="30dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal"
    android:weightSum="10"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:tint="@color/white"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/avenir_regular"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Gmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:background="#CDB4B2B2"
        android:layout_width="1dp"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:tint="@color/white"

                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/avenir_regular"
                android:id="@+id/label_facebook"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
</RelativeLayout>