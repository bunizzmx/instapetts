<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/back_to_main"
        android:layout_margin="10dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="15dp"
        app:contentPadding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:tint="@color/primary"
            android:src="@drawable/ic_arrow_back"
            android:layout_width="15dp"
            android:layout_height="15dp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:textColor="@color/black"
        android:fontFamily="@font/avenir_black"
        android:text="Raza Mascota"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/back_to_main"
        android:id="@+id/title_type_pet"
        android:textSize="28dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        app:contentPadding="3dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/title_type_pet"
        android:id="@+id/card_search_raza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:maxLines="1"
                android:maxLength="100"
                android:padding="15dp"
                android:id="@+id/serach_raza"
                android:paddingLeft="10dp"
                android:textSize="16dp"
                android:hint="@string/search"
                android:background="#02FFFFFF"
                android:layout_toRightOf="@+id/icon_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/icon_search"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_search"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:padding="10dp"
        android:id="@+id/layout_no_se_raza"
        android:layout_below="@+id/card_search_raza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/avenir_black"
            android:textColor="@color/primary"
            android:layout_alignParentRight="true"
            android:text="Desconozo la rasa"
            android:id="@+id/no_se_raza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/layout_no_se_raza"
        android:id="@+id/list_words_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>