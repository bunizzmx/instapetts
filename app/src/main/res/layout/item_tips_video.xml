<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:tint="@color/colorPrimaryDark"
            android:src="@drawable/ic_play"
            android:layout_width="10dp"
            android:layout_height="10dp"/>
        <TextView
            android:id="@+id/title_tip"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/avenir_black"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:id="@+id/single_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/root_multiple_image"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <FrameLayout
                android:id="@+id/mediaContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                >

                <ImageView
                    android:id="@+id/ivMediaCoverImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_holder"
                    />

            </FrameLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_mute"
                app:contentPadding="5dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/primary"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="#00FFFFFF"
                    android:id="@+id/ivVolumeControl"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:scaleType="centerCrop"
                    android:tint="@color/white"
                    android:src="@drawable/ic_dismute"
                    />
            </androidx.cardview.widget.CardView>
            <ProgressBar
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/progressBar"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
        </RelativeLayout>
        <com.bunizz.instapetts.utils.double_tap.DoubleTapLikeView
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/layout_double_tap_like"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:icon="@drawable/ic_hand_pet"
            app:doubleTapIn="200" />
        <com.bunizz.instapetts.utils.loadings.SpinKitView
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/progres_image"
            style="@style/SpinKitView"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_width="60dp"
            android:layout_height="50dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:id="@+id/fecha_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_corazon_black"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <TextView
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:id="@+id/num_likes"
                    android:layout_marginTop="2dp"
                    android:text="10"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_views"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <TextView
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:id="@+id/num_views"
                    android:layout_marginTop="2dp"
                    android:text="10"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>