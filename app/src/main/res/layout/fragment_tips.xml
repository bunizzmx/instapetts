<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
  <RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:orientation="vertical"
      android:id="@+id/root_toolbar"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@color/white"
      style="@style/AppTheme"
      xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <TextView
          android:id="@+id/tab_seguidos"
          android:textStyle="bold"
          android:padding="10dp"
          android:textSize="12dp"
          android:layout_centerVertical="true"
          android:layout_centerHorizontal="true"
          android:text="@string/tab_your_pet"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <TextView
          android:textSize="12dp"
          android:layout_centerVertical="true"
          android:layout_centerHorizontal="true"
          android:text="|"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <TextView
          android:id="@+id/tab_para_ti"
          android:textStyle="bold"
          android:padding="10dp"
          android:textSize="12dp"
          android:layout_centerVertical="true"
          android:layout_centerHorizontal="true"
          android:text="@string/tab_tips_notice"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/open_retos_eventos"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <ImageView
          android:layout_centerVertical="true"
          android:layout_centerHorizontal="true"
          android:src="@drawable/ic_premio"
          android:layout_width="25dp"
          android:layout_height="25dp"/>
    </RelativeLayout>

  </RelativeLayout>
  <androidx.viewpager.widget.ViewPager
      android:layout_below="@+id/root_toolbar"
      android:id="@+id/view_pager_tips"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>
</RelativeLayout>