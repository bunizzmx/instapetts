<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="20dp"
    android:id="@+id/root_no_data"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="No hay notificaciones"
        android:layout_marginTop="40dp"
        android:id="@+id/title_no_data"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"
        android:text="Sigue explorando instapetts y encuentra nuevas mascotas que llamen tu atencion."
        android:layout_below="@+id/title_no_data"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        android:id="@+id/body_no_data"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>