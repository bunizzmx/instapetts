<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/root_preview_perfil_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <com.bunizz.instapetts.utils.ImagenCircular
            android:layout_margin="10dp"
            android:id="@+id/image_pet"
            android:src="@drawable/logo"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/image_pet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/name_pet"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/avenir_black"

                    android:text="El firulais"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textSize="10dp"
                    android:layout_below="@+id/name_pet"
                    android:text="Zapopan .Jal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </RelativeLayout>
           <RelativeLayout
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:layout_width="30dp"
               android:layout_height="40dp">
               <ImageView
                   android:layout_centerVertical="true"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="5dp"
                   android:src="@drawable/ic_dots"
                   android:layout_width="15dp"
                   android:layout_height="15dp"/>
           </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:minHeight="300dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/single_image"
        android:layout_width="match_parent"
        android:layout_height="450dp"/>
    <RelativeLayout
        android:id="@+id/root_multiple_image"
        android:layout_width="match_parent"
        android:layout_height="450dp">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/list_fotos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.bunizz.instapetts.utils.Dots.DotsIndicator
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/dots_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="15dp"
            app:dotsColor="#99FFC107"
            app:dotsCornerRadius="8dp"
            app:dotsSize="7dp"
            app:dotsSpacing="4dp"
            app:dotsWidthFactor="2"
            app:progressMode="false"
            app:selectedDotColor="@color/amarillo"
            />

    </RelativeLayout>
        <com.bunizz.instapetts.utils.double_tap.DoubleTapLikeView
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/layout_double_tap_like"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:icon="@drawable/ic_hand_pet"
            app:doubleTapIn="200" />
        <ProgressBar
            android:id="@+id/progres_image"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/save_posts"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_estrella"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <ImageView
            android:id="@+id/icon_like"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_corazon"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/avenir_b"
            android:layout_centerVertical="true"
            android:text="A 123 pets les gusta esto"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/icon_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/description_posts"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/black"
        android:text="My pets is better than you pet motafuka!!! :)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/date_post"
            android:text="HACE 20 MIN"
            android:textSize="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


</LinearLayout>