<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_below="@+id/root_toolbar"
    android:background="@color/white"
    android:visibility="gone"
    android:padding="20dp"
    android:id="@+id/root_no_internet"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="@string/problem_conexion_title"
        android:layout_marginTop="40dp"
        android:id="@+id/title_no_internet"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"
        android:text="@string/problem_conexion_body"
        android:layout_below="@+id/title_no_internet"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        android:id="@+id/body_no_data"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/icon_no_internet"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/body_no_data"
        android:src="@drawable/ic_no_wifi"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
</RelativeLayout>